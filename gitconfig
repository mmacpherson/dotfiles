[color]
	ui = auto

[alias]
	changes = diff --name-status -r
	rlog = log --pretty=format:\"%h %Cblue%cr%Creset %cn %Cgreen%s%Creset\"
        wdiff = diff --color-words
        wshow = show --color-words
        st = status
        ci = commit
        br = branch
        co = checkout
        df = diff
        dc = diff --cached
        lg = log -p
        who = shortlog -s --

[diff]
       renames = true

[push]
	default = current

[core]
	excludesfile = ~/.gitignore_global
